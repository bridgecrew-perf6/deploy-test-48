
 <%- include('../partials/head.ejs') %>
 <body>
  <%- include('../partials/nav.ejs') %>

      <div class='container w-75 center-div'>
        <div id="login-form" class='container w-20 border p-5'>
          <h2 class='text-center'>Please Log In</h2>
          <form action="/login" method="POST">
            <div class="form-group my-2">
              <label for="username">Username:</label>
              <input type="text" name="username" id="username" required class='form-control' placeholder=" " autocomplete="username" value="admin">
            </div>
            <div class="form-group my-2">
              <label for="password">Password:</label>
              <input type="password" name="password" id="password" required class='form-control' placeholder=" " value="admin">
              <small id='passwordHelp' class='form-text text-muted'>Forgot password? <a href="/email/forgot">Reset</a></small>
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
              <button class="btn btn-outline-primary" id="signin">Sign in</button>
            </div>
          </form>
          <div>
            <p class="my-2 text-center">Not yet a user?  <a href="/signup">Sign up</a></p>
          </div>
        </div>
      </div>
</main>

<%- include('../partials/footer.ejs') %>
</body>
</html>
